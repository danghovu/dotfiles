{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "jsonc",
    "go",
    "javascriptreact",
    "typescriptreact",
    "javascript",
    "typescript",
    "python",
    "cs"
  ],
  "coc.preferences.formatOnType": true,
  "diagnostic.checkCurrentLine": true
}
